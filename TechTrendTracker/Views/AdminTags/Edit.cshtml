@model TechTrendTracker.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="id" class="form-control" asp-for="Id" readonly />
        </div>

       @*  this for name *@
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" id="name" class="form-control" asp-for="Name" />
        </div>

        @* this is for display Name *@
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" id="displayName" class="form-control" asp-for="DisplayName" />
        </div>
@* 
        this is for button to submit the form which is update/Delete the edited form *@
        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn-dark">Update</button>
                <button  class="btn btn-danger ms-2" type="submit"
                   asp-area=""
                   asp-controller="AdminTags"
                   asp-action="Delete"
                   >Delete</button>
            </div>
        </div>
    </form>
</div>
